<html>
  <body>
    <h1>Cadastro de livros</h1>

    <form action="/livros" method="post">
      <input id="id" name="id" type="hidden" />

      <div>
        <label for="titulo">Titulo:</label>
        <input id="titulo" name="titulo" placeholder="coloque o titulo" type="text" />
      </div>
      <div>
        <label for="preco">Preço:</label>
        <input id="preco" name="preco" placeholder="150.25" type="text" />
      </div>
      <div>
        <label for="descricao">Descrição:</label>
        <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="fale sobre o livro"></textarea>
      </div>

      <input value="Salvar" type="submit" />
    </form>
  </body>
</html>